    <!--根据用户名或邮箱查询用户-->
    <select id="queryUserByName" parameterType="String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from
        t_user
        where
        user_name = #{userName} or email = #{userName}
    </select>
    <!--根据用户id修改密码-->
    <update id="updatePwdById">
        update t_user
        set user_pwd = #{pwd}
        where id = #{userId}
    </update>
    <!--查询所有的销售人员-->
    <select id="queryAllSales" resultType="java.util.Map">
        select tu.id,
               tu.user_name uname
        from t_user tu
                 left join t_user_role tur
                           on tu.id = tur.user_id
                 left join t_role tr
                           on tur.role_id = tr.id
        where tu.is_valid = 1
          and tr.is_valid = 1
          and tr.id = 2
    </select>
    <select id="selectByParams" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_user
        where
        is_valid = 1
        <if test="userName != null and userName != ''">
            and user_name like concat('%', #{userName}, '%')
        </if>
        <if test="phone != null and phone != ''">
            and phone like concat('%', #{phone}, '%')
        </if>
        <if test="email != null and email != ''">
            and email like concat('%', #{email}, '%')
        </if>
    </select>
    <update id="deleteBatch">
        update
            t_user
        set
            is_valid = 0
        where id in
            <foreach collection="array" item="id" open="(" close=")" separator=",">
                #{id}
            </foreach>
    </update>
